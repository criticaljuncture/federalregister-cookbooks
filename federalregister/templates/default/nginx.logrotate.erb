<%= @log_path %> {
  <%= @interval %>
  dateext
  missingok
  rotate <%= @keep_for %>
  compress
  delaycompress
  notifempty
  create 640 root adm
  sharedscripts
  postrotate
    service nginx reload > /dev/null 2>&1 || true

    INSTANCE_ID=`curl --silent http://169.254.169.254/latest/meta-data/instance-id`
    <%= @s3cmd %> sync <%= @log_path %>.gz s3://<%= @bucket %>/${INSTANCE_ID}/<%= @name %>/
  endscript
}
