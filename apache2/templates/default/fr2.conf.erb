<VirtualHost *:<%= node[:app]['fr2'][:port] %>>
  ServerName <%= node[:app]['fr2'][:fqdn] %>
  ServerAlias 
  DocumentRoot <%= node[:app]['fr2'][:docroot] %>
  RewriteEngine On
  
  <Directory <%= node[:app]['fr2'][:docroot] %>>
    Options FollowSymLinks
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>
  
  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>
  
  <Location /server-status>
    SetHandler server-status

    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
  </Location>

  LogLevel info
  ErrorLog <%= node[:apache][:log_dir] %>/fr2-error.log
  CustomLog <%= node[:apache][:log_dir] %>/fr2-access.log fr_custom

  RewriteEngine On
  RewriteLog <%= node[:apache][:log_dir] %>/fr-rewrite.log
  RewriteLogLevel 0
  
  RewriteCond %{DOCUMENT_ROOT}/system/maintenance.html -f
  RewriteCond %{SCRIPT_FILENAME} !maintenance.html
  RewriteRule ^.*$ /system/maintenance.html [L]  
</VirtualHost>
